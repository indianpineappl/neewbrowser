<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base pill (light, stronger frost) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/address_bar_fill" />
            <corners android:radius="999dp" />
            <stroke android:width="1dp" android:color="#33000000" />
        </shape>
    </item>
    <!-- Top shine (light, stronger) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="999dp" />
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#44FFFFFF"
                android:centerColor="#1AFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
