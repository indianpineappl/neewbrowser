<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base frosted pill (light, stronger) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/control_bar_overlay" />
            <corners android:radius="999dp" />
            <stroke android:width="1dp" android:color="#99FFFFFF" />
        </shape>
    </item>
    <!-- Top shine gradient (light, stronger) -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="999dp" />
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#66FFFFFF"
                android:centerColor="#26FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
