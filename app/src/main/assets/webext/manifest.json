{
  "manifest_version": 2,
  "name": "TV Scroll Helper",
  "version": "1.0.1",
  "description": "Scroll the element under the cursor for TV mode.",
  "permissions": [
    "<all_urls>",
    "nativeMessaging",
    "geckoViewAddons",
    "tabs",
    "webNavigation"
  ],
  "applications": {
    "gecko": {
      "id": "tv-scroll-helper@neew.browser"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
